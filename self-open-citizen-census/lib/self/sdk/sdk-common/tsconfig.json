{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "declaration": true,
    "declarationDir": "./dist/esm",
    "outDir": "./dist/esm",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "NodeNext"
  },
  "include": [
    "index.ts",
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
}
